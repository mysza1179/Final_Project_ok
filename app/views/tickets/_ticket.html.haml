.row
  .col-xs-6.col-lg-4
    %h2= ticket.name
    %p= ticket.description
    %label{:for => "InputDifficulty"} Difficulty:
    %p= ticket.difficulty
    %label{:for => "InputDifficulty"} Status:
    %p= ticket.status
    - if can? :destroy, ticket
      %p= link_to "Delete", project_ticket_path(ticket.project, ticket), method: :delete, :confirm => 'Are you sure?', :class => 'btn btn-mini btn-danger'
